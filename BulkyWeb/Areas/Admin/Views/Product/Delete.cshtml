@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row m-1">
            <label class="mb-2 p-0">Product Name</label>
            <input asp-for="Title" type="text" disabled class="form-control" />    
        </div>
        <div class="mb-3 row m-1">
            <label class="mb-2 p-0">Display Order</label>
            <input asp-for="Description" type="text" disabled class="form-control" />        
        </div>
        <div class="mb-3 row m-1">
            <label class="mb-2 p-0">Display Order</label>
            <input asp-for="ISBN" type="text" disabled class="form-control" />
        </div>
        <div class="mb-3 row m-1">
            <label class="mb-2 p-0">Display Order</label>
            <input asp-for="Author" type="text" disabled class="form-control" />
        </div>
        <div class="mb-3 row m-1">
            <label class="mb-2 p-0">Display Order</label>
            <input asp-for="Price" type="text" disabled class="form-control" />
        </div>
        <div class="row mt-4">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border-2 form-control">Back to list</a>
            </div>
        </div>
    </div>
</form>