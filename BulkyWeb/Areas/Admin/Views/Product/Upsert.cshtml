@model ProductVM

<div class="card bg-white border-0 my-5">
    <div class="card-header bg-white m-lg-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary my-2">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
            </div>
        </div>
    </div>
</div>

<form method="post" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row">
            <div class="col-9">
                <div asp-validation-summary="All"></div>
                <div class="mb-3 row m-1">
                    <label class="mb-2 p-0">Product Name</label>
                    <input asp-for="Product.Title" type="text" class="form-control" />
                    <span asp-validation-for="Product.Title" class="text-danger p-0 mt-1"></span>
                </div>
                <div class="mb-3 row m-1">
                    <label class="mb-2 p-0">Description</label>
                    <textarea asp-for="Product.Description" type="text" class="form-control"></textarea>
                </div>
                <div class="mb-3 row m-1">
                    <label class="mb-2 p-0">ISBN</label>
                    <input asp-for="Product.ISBN" type="text" class="form-control" />
                    <span asp-validation-for="Product.ISBN" class="text-danger p-0 mt-1"></span>
                </div>
                <div class="mb-3 row m-1">
                    <label class="mb-2 p-0">Author</label>
                    <input asp-for="Product.Author" type="text" class="form-control" />
                    <span asp-validation-for="Product.Author" class="text-danger p-0 mt-1"></span>
                </div>
                <div class="mb-3 row m-1">
                    <label class="mb-2 p-0">Price</label>
                    <input asp-for="Product.Price" type="text" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger p-0 mt-1"></span>
                </div>
                <div class="mb-3 row m-1">
                    <label class="mb-2 p-0">Image URL</label>
                    <input type="file" name="file" class="form-control" />
                </div>
                <div class="mb-3 row m-1">
                    <label class="mb-2 p-0">Category</label>
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                        <option disabled selected>-- Select Category --</option>
                    </select>
                    <span asp-validation-for="Product.Price" class="text-danger p-0 mt-1"></span>
                </div>
                <div class="row mt-4">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        @if (Model.Product.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        }
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border-2 form-control">Back to list</a>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <img src="@Model.Product.ImageUrl" width="100%" />
            </div>
        </div>

    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}