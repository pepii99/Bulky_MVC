@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row m-1">
            <label class="mb-2 p-0">Category Name</label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger p-0 mt-1"></span>
        </div>
        <div class="mb-3 row m-1">
            <label class="mb-2 p-0">Display Order</label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger p-0 mt-1"></span>
        </div>
        <div class="row mt-4">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border-2 form-control">Back to list</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}